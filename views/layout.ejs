<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | The Smiths & TV Girl</title>
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <!-- Local styles -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="header">
      <div class="header-content">
        <a href="/" class="logo">The Smiths & TV Girl</a>
        <nav class="nav-tabs">
          <a href="/wiki" class="nav-tab <%= active === 'wiki' ? 'active' : '' %>">Wiki</a>
          <a href="/forum" class="nav-tab <%= active === 'forum' ? 'active' : '' %>">Forum</a>
          <a href="/files" class="nav-tab <%= active === 'files' ? 'active' : '' %>">Files</a>
        </nav>
      </div>
    </header>
    <main class="main-container">
      <!-- Sidebar can be optionally provided by pages -->
      <% if (typeof sidebar !== 'undefined') { %>
        <aside class="sidebar">
          <%= sidebar %>
        </aside>
      <% } %>
      <div class="content">
        <h1 class="page-title"><%= title %></h1>
        <%- body %>
      </div>
    </main>
    <!-- Global audio player that sticks to the bottom right of the viewport -->
    <div class="audio-player" id="global-audio-player">
      <div class="player-title">üéµ Background Music</div>
      <div class="now-playing" id="now-playing">Loading...</div>
      <audio id="audio-player"></audio>
      <div class="player-controls">
        <button class="control-btn" id="play-btn" title="Play/Pause">‚è∏Ô∏è</button>
        <button class="control-btn" id="next-btn" title="Next Track">‚è≠Ô∏è</button>
        <button class="control-btn" id="mute-btn" title="Mute/Unmute">üîä</button>
      </div>
    </div>
    <!-- App scripts -->
    <script src="/js/app.js"></script>
  </body>
</html>
